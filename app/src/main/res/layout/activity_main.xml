<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_switcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ProgressBar
        android:id="@+id/activity_main_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:indeterminate="true"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/activity_main_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    tools:context="io.keepcoding.madridguide.activities.MainActivity">

        <Button
            android:id="@+id/button_activity_main_open_shops"
            android:layout_width="@dimen/activity_main_button_width"
            android:layout_height="@dimen/activity_main_button_height"
            android:text="@string/activity_main_button_shops_text"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/button_activity_main_open_madridactivities"
            android:layout_width="@dimen/activity_main_button_width"
            android:layout_height="@dimen/activity_main_button_height"
            android:text="@string/madridActivities"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_activity_main_open_shops"
            />

    </RelativeLayout>

</ViewSwitcher>
